<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:padding="30dp"
    tools:context=".Na05Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x)=\\sqrt{1+x^3}"
                    app:condition2="[0.8, 1.762]"
                    app:conditionCounter="2"
                    app:solutionCounter="2">

                </inc.fabudi.numericalanalysis.views.NA05Button>

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x)=\\frac{1}{\\sqrt{x^3-1}}"
                    app:condition2="[1.3, 2.621]"
                    app:conditionCounter="2"
                    app:solutionCounter="2">

                </inc.fabudi.numericalanalysis.views.NA05Button>

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x)=\\sqrt{x^3-1}"
                    app:condition2="[0.6; 1.724]"
                    app:conditionCounter="2"
                    app:solutionCounter="2">

                </inc.fabudi.numericalanalysis.views.NA05Button>

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x)=\\frac{1+x^2}{\\sqrt{1+x^3}}"
                    app:condition2="[3.0, 4.254]"
                    app:conditionCounter="2"
                    app:solutionCounter="2">

                </inc.fabudi.numericalanalysis.views.NA05Button>

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x)=\\frac{sin^2x}{\\sqrt{1+x^3}}"
                    app:condition2="[0; 1.234]"
                    app:conditionCounter="2"
                    app:solutionCounter="2">

                </inc.fabudi.numericalanalysis.views.NA05Button>

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task21"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x)=\\frac{e^{2x}}{\\sqrt{1-x^2}}"
                    app:condition2="[-1.0, 1.0)"
                    app:conditionCounter="2"
                    app:solutionCounter="2">

                </inc.fabudi.numericalanalysis.views.NA05Button>

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task29"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x,y)=\\frac{x^2}{1+y^2}"
                    app:condition2="[0.0, 4.0]"
                    app:condition3="[1.0, 2.0]"
                    app:conditionCounter="3"
                    app:solutionCounter="1" />

                <inc.fabudi.numericalanalysis.views.NA05Button
                    android:id="@+id/Task32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="visible"
                    app:condition1="f(x,y)=4-x^2-y^2"
                    app:condition2="[-1.0, 1.0]"
                    app:condition3="[-1.0, 1.0]"
                    app:conditionCounter="3"
                    app:solutionCounter="1" />

            </LinearLayout>
        </ScrollView>

        <inc.fabudi.numericalanalysis.views.ButtonView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="24dp"
            android:text="Меню" />

    </LinearLayout>

</FrameLayout>