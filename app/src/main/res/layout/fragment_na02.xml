<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:padding="30dp"
    tools:context=".Na01InputFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:fadeScrollbars="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbars="none"
            app:layout_constraintBottom_toTopOf="@+id/next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="\ln(1+\\frac{x+y}{5}) -\sin(\\frac{y}{3})-x+1.1=0"
                    app:oText2="\cos(\\frac{xy}{6})-y+0.5=0"
                    app:oText3="(1,1)"
                    app:solved="false"
                    app:taskId="1" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="x-y-6\lg x -1=0"
                    app:oText2="x-3y-6\lg y -2=0"
                    app:oText3="(0.5; 0.2)"
                    app:solved="false"
                    app:taskId="2" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="\sin x - y=1.32"
                    app:oText2="\cos y - x = -0.85"
                    app:oText3="(1;0)"
                    app:solved="false"
                    app:taskId="3" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="2x^3 - y^2 - 1 =0"
                    app:oText2="xy^3-y-4=0"
                    app:oText3="(1;1)"
                    app:solved="false"
                    app:taskId="4" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="1.5x^3-y^2-1=0"
                    app:oText2="xy^3-y-4=0"
                    app:oText3="(1;1)"
                    app:solved="false"
                    app:taskId="5" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="sin(x+1) -y = 1"
                    app:oText2="2x+cos y =2"
                    app:oText3="(1;1)"
                    app:solved="false"
                    app:taskId="6" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="x^2-y+1=0"
                    app:oText2="x-\cos(\\frac{\\pi}{2}y)=0"
                    app:oText3="(1;0)"
                    app:solved="false"
                    app:taskId="7" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="tan(xy+0.2) - x^2 = 0"
                    app:oText2="0.5x^2+2y^2=1"
                    app:oText3="(1;1)"
                    app:solved="false"
                    app:taskId="8" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="x^3-y^2-1=0"
                    app:oText2="xy^3-y-4=0"
                    app:oText3="(1.2;1.3)"
                    app:solved="false"
                    app:taskId="9" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="2x-sin(\\frac{x-y}{2})=0"
                    app:oText2="2y-cos(\\frac{x+y}{2})=0"
                    app:oText3="(0;1)"
                    app:solved="false"
                    app:taskId="10" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="2"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="3"
                    app:oText1="cos(\\frac{x-y}{3})-2y=0"
                    app:oText2="sin(\\frac{x+y}{3})-2x=0"
                    app:oText3="(1;1)"
                    app:solved="false"
                    app:taskId="11" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="3"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="4"
                    app:oText1="x+x^2-2yz-0.1=0"
                    app:oText2="y-y^2+3xz+0,2=0"
                    app:oText3="z+z^2+2xy-0.3=0"
                    app:oText4="(0;0;0)"
                    app:solved="false"
                    app:taskId="12" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="3"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="4"
                    app:oText1="x^2+y^2+z^2-1=0"
                    app:oText2="2x^2+y^2-4z=0"
                    app:oText3="3x^2-4y+z=0"
                    app:oText4="(1;1;1)"
                    app:solved="false"
                    app:taskId="13" />

                <inc.fabudi.numericalanalysis.views.MultiTextButtonWithDropdown
                    android:id="@+id/b14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="25dp"
                    app:cCounter="3"
                    app:cText1="x=3"
                    app:cText2="y=4"
                    app:dropped="true"
                    app:oCounter="4"
                    app:oText1="\lg(\\frac{y}{z}) - x + 1 = 0"
                    app:oText2="\\frac{xy}{20}-z+2=0"
                    app:oText3="2x^2+y-z-0.4=0"
                    app:oText4="(1;2.2;2)"
                    app:solved="false"
                    app:taskId="14" />


            </LinearLayout>
        </ScrollView>

        <inc.fabudi.numericalanalysis.views.ButtonView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="24dp"
            android:text="Меню"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>